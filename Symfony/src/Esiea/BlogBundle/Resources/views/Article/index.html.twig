<!DOCTYPE html>
<html lang="en">

<head>

    {% block stylesheets %}
        <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bootstrap/css/small-business.css') }}" rel="stylesheet">
    {% endblock %}


</head>

<body>


<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>
                    <a href="{{ path('esiea_blog_homepage') }}">Accueil</a>
                </li>
            </ul>
        </div>

    </div>

</nav>

<div class="container">

    <div class="row">
        <div class="col-md-8">
            <table class="records_list">

                <thead>
                <ul>
                    <li>
                        <a class="btn btn-primary btn-lg" href='new'>Cr√©er article</a>
                    </li>
                </ul>
                <tr>
                    <th>Id&nbsp;</th>
                    <th>Auteur&nbsp;</th>
                    <th>Date&nbsp;</th>
                    <th>Contenu&nbsp;</th>
                    <th>Nom&nbsp;</th>
                    <th>Actions&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.auteur }}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                        <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                        <td>{{ entity.contenu }}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                        <td>{{ entity.nom }}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                        <td>
                            <ul>
                                <li>
                                    <a class="btn btn-primary btn-lg" href="{{ path('article_show', { 'id': entity.id }) }}">Consulter</a>
                                </li>
                                <li>
                                    <a class="btn btn-primary btn-lg" href="{{ path('article_edit', { 'id': entity.id }) }}">Modifier</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>

    <hr>

    <div class="row">
        <div class="col-lg-12">
            <div class="well text-center">
                Blog Yassine Triki/Guillaume Roux
            </div>
        </div>

    </div>

    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Triki/Roux</p>
            </div>
        </div>
    </footer>

</div>

</body>

</html>
