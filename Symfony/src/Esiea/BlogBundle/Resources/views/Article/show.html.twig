<!DOCTYPE html>
<html lang="en">

<head>

    {% block stylesheets %}
        <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bootstrap/css/small-business.css') }}" rel="stylesheet">
    {% endblock %}


</head>

<body>


<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>
                    <a href="{{ path('esiea_blog_homepage') }}">Accueil</a>
                </li>
                <li>
                    <a href="{{ path('article') }}">Retour Ã  la liste</a>
                </li>
            </ul>
        </div>

    </div>

</nav>

<div class="container">

    <div class="row">
        <div class="col-md-8">
            <table class="record_properties">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Auteur</th>
                    <td>{{ entity.auteur }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ entity.contenu }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ entity.nom }}</td>
                </tr>
                </tbody>
            </table>

            <ul class="record_actions">
                <li>
                    <a href="{{ path('article') }}">
                        Back to the list
                    </a>
                </li>
                <li>
                    <a href="{{ path('article_edit', { 'id': entity.id }) }}">
                        Edit
                    </a>
                </li>
                <li>{{ form(delete_form) }}</li>
            </ul>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-lg-12">
            <div class="well text-center">
                Bienvenu sur le blog Yassine Triki/Guillaume Roux
            </div>
        </div>

    </div>

    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Triki/Roux</p>
            </div>
        </div>
    </footer>

</div>

</body>

</html>

